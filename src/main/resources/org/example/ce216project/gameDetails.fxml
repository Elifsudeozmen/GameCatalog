<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.ce216project.GameDetailsController" prefWidth="800" prefHeight="600">
    <children>
        <HBox spacing="30" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

            <!-- Sol: Resim -->
            <VBox alignment="TOP_CENTER" spacing="10" prefWidth="280">
                <ImageView fx:id="gameImageView" fitWidth="250" fitHeight="350" preserveRatio="true" smooth="true" style="-fx-border-color: red; -fx-border-width: 2;" />

                <Label text="Cover Image" style="-fx-font-style: italic;" />
            </VBox>

            <!-- SaÄŸ: Bilgiler ve Butonlar -->
            <VBox spacing="8" prefWidth="500">
                <Label fx:id="titleLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="developerLabel" />
                <Label fx:id="publisherLabel" />
                <Label fx:id="releaseYearLabel" />
                <Label fx:id="playtimeLabel" />
                <Label fx:id="formatLabel" />
                <Label fx:id="languageLabel" />
                <Label fx:id="ratingLabel" />
                <Label fx:id="platformsLabel" />
                <Label fx:id="translatorsLabel" />
                <Label fx:id="steamIdLabel" />
                <Label fx:id="genresLabel" />
                <Label fx:id="tagsLabel" />

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button fx:id="editButton" text="Edit" onAction="#onEditButton" />
                    <Button fx:id="deleteButton" text="Delete" onAction="#onDeleteButton" />
                    <Button fx:id="returnButton" text="Back" onAction="#onReturnButton" />
                </HBox>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
